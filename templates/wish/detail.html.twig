{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Wishes {% endblock %}

{% block body %}
    <h3>Détail du wish n° {{ id }}</h3>
    <h4>{{ wish.title }}</h4>
    <p>{{ wish.description }}</p>
    <p>{{ wish.author }}</p>
    <p>{{ wish.dateCreated ? wish.dateCreated|date('d/m/Y') : '' }}</p>

    <a class="btn btn-secondary" onclick="return confirm('Etes-vous sûr de vouloir supprimer')" href="{{ path('wish_delete', {'id':wish.id}) }}">{{ 'Supprimer' }}</a>
    <a class="btn btn-secondary" href="{{ path('wish_update', {'id':wish.id}) }}">{{ 'Modifier' }}</a>

{% endblock %}
